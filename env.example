# Course Platform Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGO_URI=mongodb://localhost:27017/course_platform
# For production with authentication:
# MONGO_URI=mongodb://username:password@localhost:27017/course_platform?authSource=admin
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/course_platform?retryWrites=true&w=majority

# =============================================================================
# SESSION & SECURITY CONFIGURATION
# =============================================================================
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random
# Generate a secure secret: openssl rand -base64 64

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@e-dars.uz
ADMIN_PASSWORD=your-secure-admin-password-minimum-12-characters

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=production
# Options: development, production, test

# =============================================================================
# DOMAIN & URL CONFIGURATION
# =============================================================================
DOMAIN=e-dars.uz
PROTOCOL=https
# Base URL for your application
BASE_URL=https://e-dars.uz

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,application/pdf

# =============================================================================
# TELEGRAM BOT CONFIGURATION (Optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_ENABLED=false

# =============================================================================
# BUNNY.NET CONFIGURATION (Optional - for video hosting)
# =============================================================================
BUNNY_STORAGE_ZONE=your-bunny-storage-zone
BUNNY_API_KEY=your-bunny-api-key
BUNNY_STORAGE_URL=https://your-storage-zone.b-cdn.net
BUNNY_ENABLED=false

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@e-dars.uz
EMAIL_ENABLED=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
CACHE_TTL=3600
# Cache time-to-live in seconds

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
# Options: error, warn, info, debug
LOG_FILE=/var/log/course-platform/app.log

# =============================================================================
# SECURITY HEADERS
# =============================================================================
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION_ENABLED=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
# 5 minutes in milliseconds

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/backups/course-platform

# =============================================================================
# DEVELOPMENT ONLY (set to false in production)
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false 